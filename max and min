import java.util.Arrays;
import java.util.Scanner;

public class MaxMinSumDifference {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Enter the size of the array: ");
        int n = input.nextInt();
        int[] arr = new int[n];
        System.out.print("Enter the elements of the array (separated by spaces): ");
        for (int i = 0; i < n; i++) {
            arr[i] = input.nextInt();
        }
        System.out.print("Enter the value of M: ");
        int m = input.nextInt();
        System.out.print("Enter the value of N: ");
        int nn = input.nextInt();
        int[] sortedArr = arr.clone();
        Arrays.sort(sortedArr);
        int mthMax = sortedArr[n - m];
        int nthMin = sortedArr[nn - 1];
        int sum = mthMax + nthMin;
        int diff = mthMax - nthMin;
        System.out.println("Mth maximum number: " + mthMax);
        System.out.println("\nNth minimum number: " + nthMin);
        System.out.println("\nSum of Mth maximum and Nth minimum: " + sum);
        System.out.println("\nDifference between Mth maximum and Nth minimum: " + diff);
    }
}
