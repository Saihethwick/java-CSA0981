import java.util.Scanner;

public class ATM {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Enter the number of 2000 rupee notes: ");
        int num2000 = input.nextInt();
        System.out.print("Enter the number of 500 rupee notes: ");
        int num500 = input.nextInt();
        System.out.print("Enter the number of 200 rupee notes: ");
        int num200 = input.nextInt();
        System.out.print("Enter the number of 100 rupee notes: ");
        int num100 = input.nextInt();
        int totalAmount = num2000 * 2000 + num500 * 500 + num200 * 200 + num100 * 100;
        System.out.println("Total amount available in the ATM machine: " + totalAmount);
    }
}
